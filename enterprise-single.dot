digraph Enterprise {
  stylesheet="style.css"
  rankdir = "TB";
  /* splines="ortho"; - want this, but with it you can't use ports */

  graph [ fontname="helvetica-bold" ]
  node  [ shape="Mrecord" style="filled" fontname="helvetica" fillcolor="#ffffff" penwidth="2" ]
  edge  [ dir="back" arrowsize="0.5" fontname="helvetica"]

  /* external auth / web */
    kdc301 [ id="kdc301" label="{IdM|kdc}" ]
    ldp301 [ id="ldp301" label="{IdM|ldap}" ]

    cloud2 [ id="cloud2" label="Provider"
             shape="custom" shapefile="cloud.svg"
             color = "none" fillcolor="none" tooltip="VMWare, OpenStack, Etc" ]
    iam1   [ id="iam1" label="Amazon\nIAM"
             shape="custom" shapefile="cloud.svg"
             color = "none" fillcolor="none" tooltip="Amazon Identitay Access Management" ]

  {

      /*
          dumbing down this cluster
          removing basic nodes from here that are also in regional db
          (same goes with worker app)
       */
      subgraph cluster_101 {
        id="app101"
        style = "rounded,filled";
        label = "Master Appliance";

        db101  [ id="db101"  label="DB1" shape="custom" shapefile="db.svg"  color = "none" fillcolor="none" tooltip="Reporting database" ] /* | config:con101"] */
        ui101  [ id="ui101"  label="{UI|worker}" ]
        ap101  [ id="ap101"  label="{apache|auth...}" tooltip="proxy"] /* NOTE: proxy for db/auth*/
        /*
        con101 [ id="con101" label="console" ]
        ssh101 [ id="ssh101" label="ssh" ]
        */
        /* */

        db101:s -> ui101:n [ id="db101_ui101" tooltip="access via localhost | config:ui101:database.yml" ]
        ui101   -> ap101   [ id="ui101_ap101" tooltip="access via localhost | client:ap101 | server:ui101" ]
        /*
        pam101 [ id="pam101" label="{pam|sssd}" tooltip="Security Services | config:con101" ]
        con101:s -> ssh101:n [ id="con201_ssh101" ]
        {
          rank="same";
          ap101 -> pam101    [ id="ap201_pam201" constraint="true" penwidth="1" dir="forward" tooltip="access:localhost"]
          ssh101 -> pam101   [ id="ssh201_pam201" constraint="true" penwidth="1" dir="forward" tooltip="access:localhost"]
        }

        { rank="same"; ap101 ssh101 }
        */
      }

      subgraph cluster_201 {

        id="app201"
        style = "rounded,filled";
        label = "Regional DB Appliance";

        rep201 [ id="rep201" label="{db sync|worker}" tooltip="Ruby replication worker | config:ui201"]
        db201  [ id="db201"  label="DB2" shape="custom" shapefile="db.svg" color = "none" fillcolor="none" tooltip="Regional database | config:con201"]
        mem201 [ id="mem201" label="{memcache|session}" ]
        pam201 [ id="pam201" label="{pam|sssd}" tooltip="Security Services | config:con201"]
        ui201  [ id="ui201"  label="{UI|worker}" ]

        con201 [ id="con201" label="{console|rake,cli}" ]
        ap201  [ id="ap201"  label="{apache|auth?}" ]
        ssh201 [ id="ssh201" label="ssh" ]

        /* */
        db201:s  -> ui201:n  [ id="db201_ui201"   tooltip="Stores Business data, User Identity, db identity | access:localhost | client:ui201:database.yml | server:db201:pg_shadow | client-config:con201 | server-config:con201" ]
        ui201:s  -> ap201:n  [ id="ui201_ap201"   tooltip="mod_proxy connection | access:localhost" ]
        mem201:s -> ui201:n  [ id="mem201_ui201"  tooltip="access:localhost" ]
        con201:s -> ssh201:n [ id="con201_ssh201" tooltip="access:localhost" ]
        {
          rank="same";
          ap201  -> pam201   [ id="ap201_pam201"  dir="forward" tooltip="access:localhost" ]
          ssh201 -> pam201   [ id="ssh201_pam201" dir="forward" tooltip="access:localhost" ]
        }

        /* */
        rep201 -> db201  [ id="rep201_db201" dir="forward" constraint="false" tooltip="Replication to local database | access:localhost | client:rep201:database.yml | server:db201:pg_shadow | client-config:con201"]
      }

      subgraph cluster_202 {
        id="app202"
        style = "rounded,filled";
        label = "Worker App";

        wk202a [ id="wk202a" label="{inventory|worker}" ]
      }
  }

  /* put these together on the bottom line */

  {
    node  [ labelloc="b" fontsize="10"
            shape="custom" shape="custom" shapefile="user.svg"
            fixedsize="true" height="0.5" width="0.5" scale="both"
            color = "none" fillcolor="none"
           ]
    usera  [ id="usera" label="Admin" tooltip="Admin with Password" ]
    userp  [ id="userp" label="pass" tooltip="User with Password" ]
    userk  [ id="userk" label="sso" tooltip="User With Kerberos Ticket" ]
    userc  [ id="userc" label="ssl" tooltip="User With SSL Cert" ]
  }
   
  /* link 101 to 201 for region to region */ 
    db101    -> rep201  [ id="db101_rep201" constraint="false" tooltip="password from vmdb.yml access | client:rep201:vmdb.yml | client:rep201:v2_key | server:db201:pg_shadow | client-config:ui201 | server-config:con101" ]
    ui101:w  -> ui201:e [ id="ui101_ui201"  dir="both" constraint="false" tooltip="password access | client:file:v2_key | server:file:v2_key" ]

  /* link 201 to 202 (use external database) */
    db201:s  -> wk202a  [ id="db201_wk202a" tooltip="client:wk202a:database.yml | server:db201:pg_shadow | client-config:con201" ]

  /* users access the system */

    ap101:s  -> usera:n [ id="ap101_usera" tooltip="password from user, passthrough | client:usera:password | server:db101:users | server-config:con101" ]
    /* ssh101:s -> usera:n  [ id="ssh101_usera" tooltip="user/" ] */
    ap201:s  -> userp:n [ id="ap201_userp" tooltip="password from user, passthrough rails logs | client:userp:password | server:db101:users" ]
    ap201:s -> userk:n  [ id="ap201_userk" tooltip="server config uses ipa-config | client:file:keytab | server:pam201 | client-config:kdc301:kinit | server-config:con201" ]
    ssh201:s -> userp:n [ id="ssh201_userp" tooltip="password from user | client:userp:password | server:ssh201:/etc/passwd"]
    ssh201:s -> userc:n [ id="ssh201_userc" tooltip="client:userc:id_rsa | server:ssh201:id_rsa.pub | client-config:userc:ssh-keygen | server-config:userc:ssh-copy-id" ]

  /* we access external services */
    ui201    -> iam1    [ id="iam1_ui201"    dir="forward" tooltip="password from db101 | client:db201:authentications | client-config:ui201 | server:iam1" ]
    /*wk201 -> cloud2   [ id="cloud2_wk201"  dir="forward" constraint="false" tooltip="" ]*/
    wk202a   -> cloud2  [ id="cloud2_wk202a" dir="forward" tooltip="password stored in database and decoded with v2_key | client:db101:authentications | client:wk202a:v2_key | server:cloud2:password" ]

  { rank="same"; iam1 cloud2 userp kdc301 ldp301 }

  /* access auth */
    ap201 -> kdc301 [ id="ap201_kdc301"    dir="forward" tooltip="client:ap201:keytab | client-config:con201:ipa-config" ]
    ui201  -> ldp301 [ id="ui201_ldp301"     dir="forward" tooltip="ruby ldap code | client:ui201:vmdb.yml | client:ui201:v2_key | client-config:ui201" ]
    pam201 -> ldp301 [ id="pam201_ldp301"    dir="forward" tooltip="password from " ]
    userk  -> kdc301 [ id="userp_kdc301"     dir="forward" constraint="false" tooltip="" ]
}
